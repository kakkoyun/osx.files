_CONFIG_HOST_SYSTEM=`uname`

# Path
# export PATH=$PATH:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin

# Highlight
export ZSH_HIGHLIGHT_HIGHLIGHTERS_DIR=/usr/local/share/zsh-syntax-highlighting/highlighters
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# History
export HISTSIZE=50000
export SAVEHIST=50000
export HISTCONTROL=ignoredups

# Editors
export SVN_EDITOR="mvim -v" # I am not using svn but just keep it, in case.
export EDITOR="mvim -v"
export GIT_EDITOR="mvim -v"

# Force Language
export LC_ALL=en_US.UTF-8
export LC=en_US.UTF-8

# Term
export TERM="screen-256color"

# VirtualEnv
export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python2.7
export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--no-site-packages'
export PIP_VIRTUALENV_BASE=$WORKON_HOME
export PIP_RESPECT_VIRTUALENV=true

if [[ -r /usr/local/bin/virtualenvwrapper.sh ]]; then
    source /usr/local/bin/virtualenvwrapper.sh
else
    echo "WARNING: Can't find virtualenvwrapper.sh"
fi

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# Haskell, cabal
export PATH="$HOME/Library/Haskell/bin:$PATH"

# Postgres93
PATH="/Applications/Postgres.app/Contents/Versions/9.3/bin:$PATH:$PATH"

# Keep
function commands() {
  history | sed "s/^[0-9 ]*//" | sed "s/ *| */\n/g" | awk '{print $1}' | sort | uniq -c | sort -rn | head -n 100 > ~/commands.txt && cat ~/commands.txt
}
